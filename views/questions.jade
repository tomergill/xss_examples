    script.
        function getParameterByName(name, url) {
            if (!url) url = window.location.href;
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
        }

        function func() {
            var questionQuery = getParameterByName("question");
            var nameQuery = getParameterByName("asker");
            document.getElementById("mydiv").innerHTML = questionQuery;
            document.getElementById("mydiv").innerHTML += nameQuery;
        }


